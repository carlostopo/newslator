{% extends "::base.html.twig" %} 

{% block title %}Newslator - Lista{% endblock %}

{% block body %}
<div class="container theme-showcase" role="main">
	<br><br><br>
	<a href= "{{ path('crear_noticia') }}">Crear una noticia</a>
	<table class="table table-condensed">
		<thead>
			<tr>
				<th style="width: auto">Id</th>
				<th class="col-sm-3">Título</th>
				<th class="col-sm-5">Descripción</th>
				<th style="width: auto">Periódico</th>
				<th style="width: auto">Fecha</th>
				<th style="width: auto">Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for output in outputs %}
			<tr>
				<td>{{ output.id }}</td>
				<td>{{ output.title }}</td>
				<td>{{ output.body }}</td>
				<td>{{ output.publisher }}</td>
				<td>{{ output.date |date('Y-m-d') }}</td>
				<td>
					<a href="{{ path('borrar_noticia',{id:output.id}) }}">Eliminar</a><br>
					<a href="{{ path('editar_noticia',{id:output.id}) }}">Editar</a></td>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
